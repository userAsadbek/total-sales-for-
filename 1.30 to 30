  #include <iostream>
    #include <iomanip>
#include <cmath>
    using namespace  std;
    int main() {
       int number;

        double sum=0;

        cout<<"program will calculate 1/30 to 30"<<endl;

        for ( int i=1; i<=30; i++) {
         double ans=static_cast<double>(i)/30;
            cout<<"Number : "<<i<<" /30 "<<setprecision(4)<<ans<<endl;
        sum+=ans; }
        cout<<"Sum : "<<sum<<endl;
        return 0;
    }
